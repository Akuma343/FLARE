<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow Layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#8B4513" /> <!-- Dark brown shadow -->
            <corners android:radius="50dp" />
        </shape>
    </item>

    <!-- Main Button Layer -->
    <item android:top="5dp">
        <shape android:shape="rectangle">
            <solid android:color="#F5F5F5" /> <!-- Light gray button color -->
            <stroke android:width="3dp" android:color="#8B4513" /> <!-- Brown border -->
            <corners android:radius="50dp" />
        </shape>
    </item>

</layer-list>
